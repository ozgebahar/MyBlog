@model MyBlog.Admin.Models.PostViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kategori Adı:
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class="col-sm-2">
            Başlık:
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        <dt class="col-sm-2">
            İçerik:
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Content)
        </dd>
        
        <dd class="col-sm-10">
            @(Model.IsPublished? "Yayında" : "Henüz yayınlanmadı")
        </dd>

        <dd class="col-sm-10">
            <img src="data:image;base64, @Model.PictureStr" />
        </dd>
        <dt class="col-sm-2">
            Etiketler:
        </dt>
        <dd class="col-sm-10">
            @Model.Tags
        </dd>

    </dl>
</div>
<div>
   
    <a asp-action="List">Back to List</a>
</div>
