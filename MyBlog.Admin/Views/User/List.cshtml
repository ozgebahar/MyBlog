@model IEnumerable<MyBlog.Admin.Models.UserViewModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Add">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Rol</th>
            <th>İşlemler</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Firstname
                </td>
                <td>
                    @item.Lastname
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                  @item.Password
                </td>
                <td>
                    @item.Role
                </td>
               
                <td>
                    <a href="/user/edit/@item.Id">Düzenle</a>
                    <a href="/user/delete/@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
